{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node"],
    "lib": ["DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitThis": false,
    "noEmitOnError": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES6",
  },
  "include": ["./lib", "examples"],
  "exclude": [
    "node_modules",
  ]
}